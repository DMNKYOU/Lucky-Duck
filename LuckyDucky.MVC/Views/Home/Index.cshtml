@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["title"];
}

<div class="text-center">
    <h1 class="display-4">@Localizer["welcomeHeaderMessage"]</h1>
    <div class="duck-image-container">
        <img class="duck-image" src="~/images/home/duck.png" />
    </div>
    <div class="text-center">
        <div class="shop-button-container">
            <p>@Localizer["getChoise"]</p>
            <p>
                <a class="btn btn-success" asp-area="" asp-controller="Shop" asp-action="Index">@Localizer["shopTitle"]</a>
            </p>
        </div>
        <div class="lottery-button-container">
            <p>@Localizer["checkLuck"]</p>
            <p>
                <a class="btn btn-primary" asp-controller="Lottery" asp-action="Index">
                    @Localizer["lotteryTitle"]
                </a>
            </p>
        </div>
    </div>
</div>
